<!DOCTYPE html>
<html>
    <head>
        <title>Tickets</title>
    </head>
    <body>
        <%- include('components/header') %>
        <h1>Tickets</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Image</th>

                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(function(ticket) { %>
                    <tr>
                        <td><%= ticket.id %></td>
                        <td><%= ticket.title %></td>
                        <td><%= ticket.desc %></td>
                        <td><%= ticket.status %></td>
                        <td><img src="/tupload/<%= ticket.ticimg %>" alt="Ticket Image" width="100px"></td>
                        <td><a href="/ticket/<%= ticket.id %>">View</a></td>

                        <!-- <td><a href="/ticket/<%= ticket.id %>">View</a></td> -->
                        
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </body>
</html>
