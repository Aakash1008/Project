<!DOCTYPE html>
<html>
  <head>
    <title>Tickets</title>
    <style>
      body {
        font-family: 'Rubik', sans-serif;
        background: #141e30; /* fallback for old browsers */
        color: #ffffff;
      }

      ul {
        margin: 0;
        padding: 0;
      }

      li {
        list-style: none;
      }

      .navbar {
        position: absolute;
        width: 40px;
        height: 100%;
        background: linear-gradient(#141e30, #243b55);
        transition: 0.3s;
        overflow: hidden;
        z-index: 1;
      }

      .navbar:hover {
        width: 250px;
      }

      .navbar li {
        padding: 15px;
        width: 250px;
      }

      .navbar li a {
        color: #ffffff;
        text-decoration: none;
        display: block;
      }

      .navbar li i {
        margin-right: 15px;
        font-size: 16px;
      }

      .content {
        padding: 15px 30px;
        position: relative;
        display: inline-block;
        left: 50px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      table th,
      table td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ffffff; /* Add border lines here */
      }

      table th {
        background-color: #243b55;
        color: #ffffff;
      }

      table tr:nth-child(even) {
        background-color: #192a47;
      }

      table tr:hover {
        background-color: #304865;
      }

      table img {
        max-width: 100px;
        height: auto;
      }

      .view-button {
        background-color: #4CAF50;
        color: white;
        padding: 8px 16px;
        border: none;
        cursor: pointer;
        border-radius: 10px;
      }

      .view-button a {
        text-decoration: none;
        color: white;
      }
    </style>
  </head>
  <body>
    <link
      href="https://use.fontawesome.com/releases/v5.0.11/css/all.css"
      rel="stylesheet"
    />
    <div class="navbar">
      <ul>
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/mytickets/:username"><i class="fa  fa-user"></i> Ticket</a></li>
        <li><a href="/logout"><i class="fas fa-user-tie fa-lg"></i> Logout</a></li>
      </ul>
    </div>
    <div class="content">
      <h1>Ticket Details</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Status</th>
          <th>Image</th>
          <th>Chat</th>
          <th>Close Ticket</th>
        </tr>
      </thead>
      <tbody>
<% tickets.forEach(function(ticket) { %>
  <% if(ticket.id == id) { %>
  


        <tr>
          <td><%= ticket.id %></td>
          <td><%= ticket.title %></td>
          <td><%= ticket.desc %></td>
          <td><%= ticket.status %></td>
          <td>
            <img
              src="/tupload/<%= ticket.ticimg %>"
              alt="Ticket Image"
              width="100px"
            />
          </td>
          <td>
            <button onclick="window.location.href='/chat/<%= ticket.id %>'">
              Open for Chat
            </button>
          </td>
          <td>
            <button onclick="window.location.href='/close/<%= ticket.id %>'">
              Close Ticket
            </button>
          </td>
        </tr>
        <% } %>
<% }); %>
      </tbody>
    </table>    </div>
  </body>
</html>
